    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.4rem;
    height: 2.4rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
  }

  .header--single-line .header__icon:hover {
    color: rgba(var(--color-foreground), 0.75);
  }

